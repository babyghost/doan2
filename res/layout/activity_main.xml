<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout 
        android:id="@+id/abc"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
<LinearLayout
    android:id="@+id/header"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
     >
	<LinearLayout 
	    android:id="@+id/Songname"
	    android:layout_width="fill_parent"
	    android:layout_height="wrap_content"
	    android:orientation="horizontal"
	    android:background="@drawable/header">
	    <LinearLayout 
	        android:id="@+id/Songs"
	        android:layout_width="270dp"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:layout_marginTop="5dp"
	        android:layout_marginLeft="5dp">
	        <TextView
	            android:id="@+id/Songsname"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:text="Bai ca Ho Chi Minh"
	            android:textColor="#000000"
	            android:textSize="5pt"
	            />
	           <TextView
	            android:id="@+id/Singer"
	            android:layout_width="200dp"
	            android:layout_height="wrap_content"
	            android:text="No name"
	            android:textColor="#000000"
	            android:textSize="3pt"
	            />
	    </LinearLayout>
	    <ImageButton
	        android:id="@+id/playlist"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/btn_playlist"
	        android:background="@null"
	        android:layout_marginTop="5dp"/>
		</LinearLayout>
		<LinearLayout 
		        android:id="@+id/headercontrol"
		        android:layout_width="fill_parent"
		        android:layout_height="wrap_content"
		        android:orientation="horizontal"
		        android:background="@drawable/headercontrol">
		     <ImageButton
		        android:id="@+id/repeat"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_repeat"
		        android:layout_marginTop="3dp"
		        android:layout_marginLeft="200dp"
		        android:background="@null"/>
		      <ImageButton
		        android:id="@+id/shuffle"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:src="@drawable/btn_shuffle"
		        android:layout_marginTop="3dp"
		        android:layout_marginLeft="13dp"
		        android:background="@null"/>
		</LinearLayout>
	</LinearLayout>
	    <ImageView 
	        android:id="@+id/image"
	        android:layout_width="200dp"
	        android:layout_height="200dp"
		    android:layout_marginLeft="65dp"
		    android:layout_marginTop="30dp"
	        android:src="@drawable/imageview"
	       />
	    <LinearLayout 
	        android:id="@+id/Songinfo"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical">
	        <TextView 
	            android:id="@+id/Songname"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="Bai ca xay dung"
	            android:textSize="12pt"
	            android:textColor="#ffffff"
	           />
	        <TextView
	            android:id="@+id/Sing"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:gravity="center"
	            android:text="No name"
	            android:textColor="#ffffff"
	            android:textSize="8pt" />
	    </LinearLayout>
	    <LinearLayout 
	        android:id="@+id/seekbar"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_marginTop="40dp">
	        <TextView 
	            android:id="@+id/currentDuration"
	            android:layout_width="30dp"
	            android:layout_height="wrap_content"
	            android:text="2:30"
	            android:layout_marginLeft="5dp"
	            android:textColor="#ffffff"
	            android:textSize="5pt"
	            android:layout_gravity="bottom"/>
	        <SeekBar 
	            android:id="@+id/seekbar"
	            android:layout_width="240dp"
	            android:layout_height="wrap_content"
	            android:thumb="@drawable/seek_handler"
	            android:progressDrawable="@drawable/seekbar_progress"
	            android:paddingLeft="6dp"
	    	 	android:paddingRight="6dp"/>
	        <TextView 
	            android:id="@+id/songtotalDuration"
	            android:layout_width="30dp"
	            android:layout_height="wrap_content"
	            android:text="2:30"
	            android:textColor="#ffffff"
	            android:textSize="5pt"
	            android:layout_marginLeft="6dp"
	            android:layout_gravity="bottom"
	           />
	    </LinearLayout>
	     <LinearLayout 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="10dp"
            android:layout_marginTop="10dp"
            android:background="#dcdce0"
           >
            <!-- Previous Button -->
            <ImageButton
                android:id="@+id/btnPrevious" 
                android:src="@drawable/btn_previous"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"/>
            <!-- Backward Button -->
            <ImageButton 
                android:id="@+id/btnBackward"
                android:src="@drawable/btn_backward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"/>
            <!-- Play Button -->
            <ImageButton 
                android:id="@+id/btnPlay"
                android:src="@drawable/btn_play"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"/>
            <!-- Forward Button -->
            <ImageButton 
                android:id="@+id/btnForward"
                android:src="@drawable/btn_forward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"/>
            <!-- Next Button -->
            <ImageButton 
                android:id="@+id/btnNext"
                android:src="@drawable/btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"/>
        </LinearLayout>
</LinearLayout>
</RelativeLayout>